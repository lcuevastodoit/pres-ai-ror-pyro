<div class="space-y-2">
  <!-- Pregunta alineada a la derecha -->
  <div class="flex justify-end">
    <div class="bg-blue-600 text-white rounded-lg px-4 py-2 max-w-xs">
      <%= question %>
    </div>
  </div>
  <!-- Respuesta alineada a la izquierda -->
  <div class="flex justify-start">
    <div class="bg-gray-700 text-gray-100 rounded-lg px-4 py-2 max-w-xs">
      <%= answer %>
    </div>
  </div>
</div>